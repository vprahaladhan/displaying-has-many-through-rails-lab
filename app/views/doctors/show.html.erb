<h1>Doctor</h1>

<div>Name: <%= @doctor.name %></div>
<div>Dept: <%= @doctor.department %></div>

<h3>Appointments</h3>
<ul>
<% @doctor.appointments.each do |a| %>
  <li>
    <%= a.appointment_datetime.strftime("%B %d, %Y at %k:%M") %>
    <%= link_to a.patient.name, patient_path(a.patient) %>
  </li>
<% end %>
</ul>